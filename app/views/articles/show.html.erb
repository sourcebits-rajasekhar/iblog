<p id="notice"><%= notice %></p>
<h2> Article </h2>
<p>
  <b>Title:</b>
  <%= @article.title %>
</p>

<p>
  <b>Body:</b>
  <%= @article.body %>
</p>


<h2>Comments</h2>
<%= render :partial => @article.comments %>
<br />
<br />
<h2> Add Comment </h2>
<%= form_for([@article, @article.comments.build]) do |f| %>
<div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
</div>
  <%if signed_in? %>
  <p><%= f.submit %></p>
  <p><%= link_to "Sign Out",signout_path %>
  <% else %>
  <%=link_to "Sign In" , signin_path %>
  <%end %>
<% end %>

<br />
<%=link_to "All Articles" , articles_path %>